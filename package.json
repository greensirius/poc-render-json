{
  "name": "vision-ui",
  "version": "0.1.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start:web": "react-scripts start",
    "build:web": "react-scripts build",
    "eject:cra": "react-scripts eject",
    "start:expo": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject:expo": "expo eject",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "check-format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -p .",
    "typecheck": "tsc --noEmit -p .",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn jest",
    "docgen": "jsonschema2md -o documentation/src/markdown -d src/schema -v 04 && cd documentation && gatsby develop"
  },
  "dependencies": {
    "expo": "^32.0.0",
    "react": "^16.8.4",
    "react-art": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "react-native-paper": "^2.15.0",
    "react-native-web": "^0.11.1",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "@types/expo": "^32.0.8",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "@types/react-native": "^0.57.41",
    "@types/react-test-renderer": "^16.8.1",
    "jest-expo": "^32.0.0",
    "prettier": "^1.16.4",
    "prettier-tslint": "^0.4.2",
    "react-native-testing-library": "^1.6.1",
    "react-test-renderer": "^16.8.4",
    "schedule": "0.4.0",
    "ts-jest": "^24.0.0",
    "tsconfig-kodefox": "^1.0.1",
    "tslint": "^5.14.0",
    "tslint-config-kodefox": "^1.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "jest": {
    "preset": "jest-expo",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "ios.ts",
      "ios.tsx",
      "android.ts",
      "android.tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  }
}
